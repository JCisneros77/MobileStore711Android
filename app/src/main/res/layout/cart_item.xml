<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="1dp">


    <ImageView
        android:id="@+id/iv_cart_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_lock"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:tint="@color/Orange711"/>

    <TextView
        android:id="@+id/tv_cart_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Red711"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:layout_toEndOf="@id/iv_cart_item_image"
        android:text="Product Name"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_cart_item_name"
        android:layout_alignBottom="@+id/tv_cart_item_name"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="110dp"
        android:textAlignment="textStart"
        android:text="Price"
        android:textColor="@color/Green711"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_cart_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_cart_item_name"
        android:layout_alignBottom="@+id/tv_cart_item_name"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textAlignment="textStart"
        android:layout_marginEnd="40dp"
        android:text="amount"
        android:textColor="@color/Green711"
        android:textSize="20sp" />

</RelativeLayout>