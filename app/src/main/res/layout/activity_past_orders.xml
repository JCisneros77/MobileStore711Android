<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="itesm.mobilestore711.PastOrdersActivity">

    <ImageButton
        android:id="@+id/ib_back_to_home_past_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_back"
        android:tint="@color/Green711" />

    <TextView
        android:id="@+id/tv_orders_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="Mis Pedidos"
        android:textColor="@color/Orange711"
        android:textSize="30sp"
        android:layout_below="@+id/ib_back_to_home_past_orders"
        android:layout_toEndOf="@+id/ib_back_to_home_past_orders" />

    <ImageView
        android:id="@+id/iv_711_logo_past_orders"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_7_eleven_brand"
        android:layout_alignTop="@+id/ib_back_to_home_past_orders"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <ListView
        android:id="@+id/lv_past_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_orders_title"
        android:layout_marginTop="37dp" />

</RelativeLayout>
