<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="itesm.mobilestore711.StoreInformationActivity">

    <TextView
        android:id="@+id/tv_phone_storeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/Orange711"
        android:textSize="20dp"
        android:layout_below="@+id/tv_phone_title_storeInfo"
        android:layout_alignStart="@+id/tv_address_storeInfo" />

    <TextView
        android:id="@+id/tv_address_storeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="nombre"
        android:textColor="@color/Orange711"
        android:textSize="20dp"
        android:layout_below="@+id/tv_address_title_storeInfo" />

    <TextView
        android:id="@+id/tv_address_title_storeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección:"
        android:textColor="@color/Red711"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/tv_name_storeInfo"
        android:layout_marginTop="26dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_7_eleven_brand"
        android:id="@+id/iv_711_logo_storeInfo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_name_storeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="store"
        android:textColor="@color/Green711"
        android:textSize="40dp"
        android:layout_below="@+id/iv_711_logo_storeInfo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_phone_title_storeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono:"
        android:textColor="@color/Red711"
        android:textSize="30dp"
        android:layout_alignStart="@id/tv_address_title_storeInfo"
        android:layout_below="@+id/tv_address_storeInfo"
        android:layout_marginTop="52dp" />

    <ImageButton
        android:id="@+id/ib_back_to_home_storeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_711_logo_storeInfo"
        android:background="@android:color/transparent"
        android:tint="@color/Green711"
        app:srcCompat="@mipmap/ic_back" />

</RelativeLayout>
